{# index.twig - This is the default template, it will be rendered when index.php is called with all the latest posts#}
{% extends 'base.twig' %}
{% block content %}
  {% if posts %}
    {% for post in posts %}
      <div class="post">
        <h1>{{ post.title }}</h1>
        <p>{{ post.content }}</p>
      </div>
    {% endfor %}
  {% endif %}
{% endblock %}
